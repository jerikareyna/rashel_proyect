---
import "../styles/index.scss";
import MainLayout from "../layouts/MainLayout.astro";
import Boton from "../components/Boton.astro";
---

<MainLayout>
  <div class="container">
    <div class="text-container">
      <h1>Recetas</h1>
      <p>
        Elije entre nuestras recomendaciones nutritivas para el desayuno,
        almuerzo y cena, y disfruta de una alimentación equilibrada durante todo
        el día.
      </p>
      <div>
        <Boton image="/images/desayuno.svg">Desayuno</Boton>
        <Boton image="/images/almuerzo.svg">Almuerzo</Boton>
        <Boton image="/images/cena.svg">Cena</Boton>
      </div>
    </div>
  </div>
</MainLayout>

<style lang="scss">
  @use "../styles/colors";
  .container {
    background-color: colors.$verde-claro;
    height: 100dvh;
    text-align: center;
    display: grid;
    place-items: center;

    .text-container {
      padding: 1rem;
      h1 {
        font-size: 8rem;
      }

      p {
        font-size: 2rem;
        margin-bottom: 4rem;
      }
    }
  }
</style>
